<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="bg-zinc-900">
            <h1 class="text-white w-50 text-4xl px-9 py-9 align-middle font-bold justify-center">NOTEPAD</h1>
        </div>

        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-700" type="text" placeholder="Your Title" name="title">
                <textarea class="block rounded-md outline-none w-full resize-none px-5 py-3 mt-3 bg-zinc-700 " name="details" placeholder="Description" ></textarea>
                <input class=" bg-slate-500 px-5 py-2 rounded outline-none mt-3" type="submit" value="Create Tasks">
            </form>
        </div>
        
        <div class="tasks flex flex-wrap gap-3  p-10">
            <% if(files.length >0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task m-w-80 px-3 rounded-md py-2 bg-zinc-700 ">
                        <h1 class="text-white text-3xl tracking-tighter mt-2"><%= val %></h1>
                        <div class="edit flex justify-between ">
                            <a class="text-blue-600" href="/file/<%= val %>">Read More.</a>
                            <a class="text-blue-600 " href="/edit/<%= val %>">Edit</a>
                        </div>
                        
                    </div>
                    
                <% }) %>
            <% } else{ %>
                <div class="Task1 text-zinc-500">No Tasks Yet!!</div>
            <% } %>
            
            
            
        </div>
    </div>
</body>
</html>